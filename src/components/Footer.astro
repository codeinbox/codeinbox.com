---
import Container from './Container.astro';
import Logo from './Logo.astro';
import NavLinks from './NavLinks.astro';
---

<footer class="border-t border-gray-200">
  <Container>
    <div class="flex flex-col items-start justify-between gap-y-12 pt-16 pb-6 lg:flex-row lg:items-center lg:py-16">
      <div>
        <div class="flex items-center text-gray-900">
          <Logo class="h-10 w-10 flex-none fill-cyan-500" />
          <div class="ml-4">
            <p class="text-base font-semibold">CodeInbox</p>
            <p class="mt-1 text-sm">a product by MagicBell, Inc.</p>
          </div>
        </div>
        <nav class="mt-11 flex gap-8">
          <NavLinks />
        </nav>
      </div>
    </div>
    <div class="flex flex-col border-t border-gray-200 pt-8 pb-12 md:pt-6">
      <p class="mt-6 text-sm text-gray-500 md:mt-0">
        &copy; Copyright {new Date().getFullYear()}. All rights reserved.
      </p>
    </div>
  </Container>
</footer>
